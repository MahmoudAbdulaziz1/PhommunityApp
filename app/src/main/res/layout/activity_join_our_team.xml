<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/join_our_team">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/join_our_team_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:gravity="right"
        android:layoutDirection="ltr"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:logo="@drawable/logo"
        app:navigationIcon="@drawable/back"><!-- logo for the Toolbar-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/join_our_team_toolbar_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layoutDirection="rtl"
                    android:src="@drawable/camera_notify" />

                <FrameLayout
                    android:id="@+id/join_our_team_notify_coming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/come_notifications" />

                    <TextView
                        android:id="@+id/join_our_team_notify_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="99"
                        android:textColor="@android:color/white" />
                </FrameLayout>

            </RelativeLayout>


            <ImageView
                android:id="@+id/join_our_team_toolbar_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layoutDirection="rtl"
                android:src="@drawable/menu" />


        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/join_our_team__divider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="50dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/join_our_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_back"
            android:gravity="center_vertical">




            <EditText
                android:id="@+id/join_our_name_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="#d1d1d1" />


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/join_our_email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_back"
            android:gravity="center_vertical">




            <EditText
                android:id="@+id/join_our_email_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/email"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="#d1d1d1" />


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/join_our_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_back"
            android:gravity="center_vertical">




            <EditText
                android:id="@+id/join_our_title_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/job_title"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="#d1d1d1" />


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/join_our_note_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_back"
            android:gravity="center_vertical">




            <EditText
                android:id="@+id/join_our_note_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/note"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="#d1d1d1"
                android:gravity="top|left"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="3dp">
            <Button
                android:id="@+id/join_our_upload_cv_btn"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="@string/upload_cv"
                android:background="#3C3C3B" />
            <LinearLayout
                android:id="@+id/join_our_no_file_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="20dp">

                <ImageView
                    android:id="@+id/join_our_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/join_our_no_file_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_file_selected"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"/>


            </LinearLayout>



        </LinearLayout>


        <Button
            android:id="@+id/join_our_send_message"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/send_messge"
            android:layout_marginStart="30dp"
            android:background="#3C3C3B"
            android:layout_marginTop="3dp" />


    </LinearLayout>


</LinearLayout>