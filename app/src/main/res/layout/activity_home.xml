<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_page"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/home_toolbar_response"
                layout="@layout/home_toolbar_layout" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first"
            android:orientation="vertical"
            android:layout_marginTop="-12dp">

            <include
                android:id="@+id/menu_response"
                layout="@layout/meny_layout" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first"
            android:orientation="vertical"
            android:layout_marginTop="-12dp">

            <include
                android:id="@+id/notification_response"
                layout="@layout/notification_layout" />
        </LinearLayout>




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home">


        <Button
            android:id="@+id/school"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="48dp"
            android:background="@android:color/transparent"
            android:text="" />

        <Button
            android:id="@+id/sell"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/user_name"
            android:layout_marginStart="141dp"
            android:background="@android:color/transparent"
            android:text="" />

        <Button
            android:id="@+id/rent"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="-145dp"
            android:layout_marginTop="148dp"
            android:layout_toStartOf="@+id/sell"
            android:background="@android:color/transparent"
            android:text="" />

        <Button
            android:id="@+id/cbc_lab"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="62dp"
            android:layout_marginTop="160dp"
            android:background="@android:color/transparent"
            android:text="" />

        <Button
            android:id="@+id/cbc_studio"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="216dp"
            android:layout_marginStart="113dp"
            android:background="@android:color/transparent"
            android:text="" />

        <Button
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="111dp"
            android:layout_marginStart="74dp"
            android:background="@android:color/transparent"
            android:text="" />

        <Button
            android:id="@+id/assistant_second_shooter"
            android:layout_width="121dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/help"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-3dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:text="" />

        <!--<TextView-->
            <!--android:id="@+id/welcome"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignBaseline="@+id/school"-->
            <!--android:layout_alignEnd="@+id/cbc_lab"-->
            <!--android:layout_marginEnd="3dp"-->
            <!--android:text="Welcome"-->
            <!--android:textSize="14sp" />-->

        <TextView
            android:id="@+id/user_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="87dp"
            android:text="Mahmoud"
            android:textStyle="bold" />


    </RelativeLayout>
</LinearLayout>