<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/about_toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:src="@drawable/school_header" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="12"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_style">

                    <TextView
                        android:id="@+id/school_course_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableTop="@drawable/school_course"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="@string/school_course"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:textSize="20sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_style">

                    <mahmoudvic.org.phomunity.fonts.CustomTextView
                        android:id="@+id/school_events_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableTop="@drawable/school_events"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="@string/school_events"
                        android:textIsSelectable="false"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_marginTop="12dp"
                android:layout_weight="4"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_style">

                    <mahmoudvic.org.phomunity.fonts.CustomTextView
                        android:id="@+id/school_groups_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableTop="@drawable/school_groups"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="@string/school_groups"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textIsSelectable="false"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_style">

                    <mahmoudvic.org.phomunity.fonts.CustomTextView
                        android:id="@+id/school_videos_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableTop="@drawable/school_videos"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="@string/school_videos"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textIsSelectable="false"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_marginTop="12dp"
                android:layout_weight="4"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_style">

                    <mahmoudvic.org.phomunity.fonts.CustomTextView
                        android:id="@+id/school_tips_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableTop="@drawable/school_tips"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="@string/school_tips"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textIsSelectable="false"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_style">

                    <mahmoudvic.org.phomunity.fonts.CustomTextView
                        android:id="@+id/school_evaluation_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableTop="@drawable/school_evaluation"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="@string/school_evaluation"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textIsSelectable="false"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="120dp"-->
            <!--android:layout_marginBottom="8dp"-->
            <!--&gt;-->

            <!--<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
            <!--android:id="@+id/main_school_cardvie"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="left"-->
            <!--android:src="@drawable/school_header" />-->
            <!--</android.support.v7.widget.CardView>-->

            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="left"
                android:layout_marginBottom="8dp"
                android:layout_weight="2"
                android:gravity="left"
                android:weightSum="3">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:src="@drawable/school_footer" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>