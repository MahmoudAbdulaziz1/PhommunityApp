<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/about_toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_cardview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/profile_image_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />

        </android.support.v7.widget.CardView>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_back_small"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="ID Number"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/profile_id_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="5"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_back_small"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >

                <TextView
                    android:id="@+id/profile_pixel_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Pixel"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/profile_pixel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="50"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />
            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_data_cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/card_view"
            android:layout_toLeftOf="@+id/card_view"
            android:layout_toStartOf="@+id/card_view"
            android:padding="20dp"
            card_view:cardBackgroundColor="@color/yellow"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/user_profile"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/profile_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Mahmoud Ahmed"
                        android:textColor="#3C3C3B"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:gravity="left"/>
                </LinearLayout>

                <View
                    android:id="@+id/user_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="3dp"
                    android:background="#3C3C3B"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="9dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/email_profile"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/profile_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="mahmoud123@yahoo.com"
                        android:textColor="#3C3C3B"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:gravity="left"/>
                </LinearLayout>
                <View
                    android:id="@+id/email_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="3dp"
                    android:background="#3C3C3B"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="9dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/mobile_profile"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/profile_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="01100509012"
                        android:textColor="#3C3C3B"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:gravity="left"/>
                </LinearLayout>
                <View
                    android:id="@+id/mobile_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="3dp"
                    android:background="#3C3C3B"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="9dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:paddingLeft="1dp"
                        android:src="@drawable/level_profile"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/profile_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Professinal"
                        android:textColor="#3C3C3B"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:gravity="left"/>
                </LinearLayout>
                <View
                    android:id="@+id/level_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="3dp"
                    android:background="#3C3C3B"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="9dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/camera_profile"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/profile_camera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="canon"
                        android:textColor="#3C3C3B"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:gravity="left"/>
                </LinearLayout>

                <View
                    android:id="@+id/camera_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="3dp"
                    android:background="#3C3C3B"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="9dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/interest_profile"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/profile_interest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Food"
                        android:textColor="#3C3C3B"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:gravity="left"/>
                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/update_profile_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3C3C3B"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/edit_info"
        android:padding="5dp"
        android:layout_gravity="right"
        android:layout_marginEnd="25dp"
        android:textAllCaps="false"/>

</LinearLayout>