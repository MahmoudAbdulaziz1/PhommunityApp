<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page"
    tools:context=".LoginActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/forget_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:gravity="right"
        android:layoutDirection="ltr"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:logo="@drawable/logo"
        app:navigationIcon="@drawable/back"><!-- logo for the Toolbar-->


    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/forget_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:background="#000000" />





    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/login_password_layout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="285dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/edit_text_back2"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/login_password_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mail"
            android:layout_marginLeft="5dp"/>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:background="@android:color/white" />

        <EditText
            android:id="@+id/forget_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/email_or_id"
            android:textColorHint="#d1d1d1"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            style="@style/TextAppearance.AppCompat.Small"
            android:textCursorDrawable="@drawable/cursor_color"/>


    </LinearLayout>


    <Button
        android:id="@+id/send_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="right"
        android:layout_marginBottom="126dp"
        android:layout_weight="1"
        android:background="#3C3C3B"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="20dp"
        android:text="@string/signUp"
        android:textColor="@android:color/white"
        style="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        android:textAllCaps="false" />




</RelativeLayout>