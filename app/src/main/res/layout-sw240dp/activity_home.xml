<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_page"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/about_toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></FrameLayout>



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/school"
            android:layout_width="77dp"
            android:layout_height="66dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="48dp"
            android:background="@android:color/transparent"
            android:text="" />

        <Button
            android:id="@+id/sell"
            android:layout_width="70dp"
            android:layout_height="66dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/user_name"
            android:layout_marginStart="139dp"
            android:background="@android:color/transparent"
            android:text="" />

        <Button
            android:id="@+id/rent"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="-145dp"
            android:layout_marginTop="148dp"
            android:layout_toStartOf="@+id/sell"
            android:background="@android:color/transparent"
            android:text="" />

        <Button
            android:id="@+id/cbc_lab"
            android:layout_width="80dp"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="65dp"
            android:layout_marginTop="170dp"
            android:background="@android:color/transparent"
            android:text="" />

        <Button
            android:id="@+id/cbc_studio"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cbc_lab"
            android:layout_marginStart="111dp"
            android:background="@android:color/transparent"
            android:text="" />

        <Button
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_alignBottom="@+id/assistant_second_shooter"
            android:layout_alignParentStart="true"
            android:layout_marginStart="75dp"
            android:background="@android:color/transparent"
            android:text="" />

        <Button
            android:id="@+id/assistant_second_shooter"
            android:layout_width="121dp"
            android:layout_height="98dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="98dp"
            android:layout_marginEnd="14dp"
            android:background="@android:color/transparent"
            android:text="" />

        <!--<TextView-->
        <!--android:id="@+id/welcome"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignEnd="@+id/cbc_lab"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_marginTop="70dp"-->
        <!--android:text="Welcome"-->
        <!--android:textSize="14sp" />-->

        <TextView
            android:id="@+id/user_name"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="101dp"
            android:gravity="center_horizontal"
            android:text="Mahmoud"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>


    </RelativeLayout>
    </LinearLayout>