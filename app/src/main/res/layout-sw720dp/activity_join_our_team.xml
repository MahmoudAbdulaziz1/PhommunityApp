<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/join_our_team"
    android:id="@+id/join_our">

    <FrameLayout
        android:id="@+id/about_toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="160dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/join_our_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/edit_text_back2"
            android:gravity="center_vertical">




            <EditText
                android:id="@+id/join_our_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="#d1d1d1"
                style="@style/TextAppearance.AppCompat.Large"
                android:textCursorDrawable="@drawable/cursor_color"/>


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/join_our_email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/edit_text_back2"
            android:gravity="center_vertical">




            <EditText
                android:id="@+id/join_our_email_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/email"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="#d1d1d1"
                style="@style/TextAppearance.AppCompat.Large"
                android:textCursorDrawable="@drawable/cursor_color"/>


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/join_our_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/edit_text_back2"
            android:gravity="center_vertical">




            <EditText
                android:id="@+id/join_our_title_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/job_title"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="#d1d1d1"
                style="@style/TextAppearance.AppCompat.Large"
                android:textCursorDrawable="@drawable/cursor_color"/>


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/join_our_note_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/edit_text_back2"
            android:gravity="center_vertical">




            <EditText
                android:id="@+id/join_our_note_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/note"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="#d1d1d1"
                android:gravity="top|left"
                style="@style/TextAppearance.AppCompat.Large"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="3dp">
            <Button
                android:id="@+id/join_our_upload_cv_btn"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:text="@string/upload_cv"
                android:background="#3C3C3B"
                style="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginStart="60sp"
                android:textColor="#fff"/>
            <LinearLayout
                android:id="@+id/join_our_no_file_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="60dp">

                <ImageView
                    android:id="@+id/join_our_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/join_our_no_file_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_file_selected"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    style="@style/TextAppearance.AppCompat.Large"/>


            </LinearLayout>



        </LinearLayout>


        <Button
            android:id="@+id/join_our_send_message"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="@string/send_messge"
            android:layout_marginStart="90dp"
            android:background="#3C3C3B"
            android:layout_marginTop="10dp"
            style="@style/TextAppearance.AppCompat.Large"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#fff"/>


    </LinearLayout>


</LinearLayout>