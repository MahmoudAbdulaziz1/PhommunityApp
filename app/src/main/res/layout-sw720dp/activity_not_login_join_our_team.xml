<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/join_our_team"
    android:orientation="vertical"
    android:id="@+id/join">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/not_login_join_our_team_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:gravity="right"
        android:layoutDirection="ltr"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:logo="@drawable/logo"
        app:navigationIcon="@drawable/back"><!-- logo for the Toolbar-->


    </android.support.v7.widget.Toolbar>
    <View
        android:id="@+id/no_join_our_team__divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="#000000"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/no_join_our_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_text_back2"
            android:gravity="center_vertical">


            <EditText
                android:id="@+id/no_join_our_name_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="#d1d1d1"
                android:textCursorDrawable="@drawable/cursor_color"
                style="@style/TextAppearance.AppCompat.Large" />


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/no_join_our_email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_text_back2"
            android:gravity="center_vertical">


            <EditText
                android:id="@+id/no_join_our_email_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/email"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="#d1d1d1"
                android:textCursorDrawable="@drawable/cursor_color"
                style="@style/TextAppearance.AppCompat.Large" />


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/no_join_our_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_text_back2"
            android:gravity="center_vertical">


            <EditText
                android:id="@+id/no_join_our_title_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/job_title"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="#d1d1d1"
                android:textCursorDrawable="@drawable/cursor_color"
                style="@style/TextAppearance.AppCompat.Large" />


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/no_join_our_note_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edit_text_back2"
            android:gravity="center_vertical"
            style="@style/TextAppearance.AppCompat.Small">


            <EditText
                android:id="@+id/no_join_our_note_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top|left"
                android:hint="@string/note"
                android:inputType="textMultiLine|text"
                android:maxLines="5"
                android:textColorHint="#d1d1d1"
                android:textCursorDrawable="@drawable/cursor_color"
                style="@style/TextAppearance.AppCompat.Large" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/no_join_our_upload_cv_btn"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:background="#3C3C3B"
                android:text="@string/upload_cv"
                android:textColor="#fff"
                style="@style/TextAppearance.AppCompat.Large"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:padding="15dp"/>

            <LinearLayout
                android:id="@+id/no_join_our_no_file_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/no_join_our_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/no_join_our_no_file_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="@string/no_file_selected"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/no_join_our_send_message"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="3dp"
            android:background="#3C3C3B"
            android:text="@string/send_messge"
            android:textColor="#fff"
            style="@style/TextAppearance.AppCompat.Large"
            android:padding="15dp"/>


    </LinearLayout>


</LinearLayout>