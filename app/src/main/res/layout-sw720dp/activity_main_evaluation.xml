<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/about_toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="175dp">

            <LinearLayout
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/main_evaluation_cardview"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginEnd="295dp"
                android:layout_marginStart="295dp"
                android:orientation="vertical"
                android:background="@drawable/edit_text_back">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/eva_icon" />

                <TextView
                    android:id="@+id/main_evaluation_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/evaluation"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/photography_cardview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                card_view:cardBackgroundColor="#EEC22B"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/photography_icon" />

                <TextView
                    android:id="@+id/photography_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="115dp"
                    android:gravity="center_horizontal"
                    android:text="@string/photography"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textIsSelectable="false"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/videography_cardView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/card_view"
                android:layout_toLeftOf="@+id/card_view"
                android:layout_toStartOf="@+id/card_view"
                android:layout_weight="1"
                card_view:cardBackgroundColor="#EEC22B"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/videography_icon" />

                <TextView
                    android:id="@+id/videography_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="115dp"
                    android:gravity="center"
                    android:text="@string/videography"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="100dp">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/photo_editing_cardview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                card_view:cardBackgroundColor="#EEC22B"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/photo_editing_icon" />

                <TextView
                    android:id="@+id/photo_editing_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="115dp"
                    android:gravity="center"
                    android:text="@string/photo_editing"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/video_editing_cardview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/card_view"
                android:layout_toLeftOf="@+id/card_view"
                android:layout_toStartOf="@+id/card_view"
                android:layout_weight="1"
                card_view:cardBackgroundColor="#EEC22B"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/video_editing_icon" />

                <TextView
                    android:id="@+id/video_editing_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="115dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/video_editing"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:layout_marginEnd="265dp"
            android:layout_marginStart="265dp">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/lighting_cardview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                card_view:cardBackgroundColor="#EEC22B"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/lights" />

                <TextView
                    android:id="@+id/lighting_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="115dp"
                    android:gravity="center"
                    android:text="@string/lighting"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"/>
            </android.support.v7.widget.CardView>


        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="490dp"
            android:src="@drawable/school_footer"
            android:paddingBottom="30dp"/>



    </LinearLayout>


</LinearLayout>