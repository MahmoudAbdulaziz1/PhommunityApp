<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/regiter_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:gravity="right"
        android:layoutDirection="ltr"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:logo="@drawable/logo"
        app:navigationIcon="@drawable/back"><!-- logo for the Toolbar-->


    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/regiter_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="#000000" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/register_divider"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/register_background"
            android:overScrollMode="always"
            android:paddingTop="30dp"
            android:scrollbarAlwaysDrawVerticalTrack="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="30dp">


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/register_first_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edit_text_back2"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/register_first_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mail"
                        android:layout_marginLeft="10dp"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:background="@android:color/white" />

                    <EditText
                        android:id="@+id/register_first_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/first"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textColorHint="#d1d1d1"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="40sp" />


                </LinearLayout>


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/register_last_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edit_text_back2"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/register_last_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/last"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textColorHint="#d1d1d1"
                        android:textSize="40sp" />


                </LinearLayout>


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/register_email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edit_text_back2"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/register_email_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/email"
                        android:layout_marginLeft="10dp"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:background="@android:color/white" />

                    <EditText
                        android:id="@+id/register_email_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textColorHint="#d1d1d1"
                        android:textSize="40sp" />


                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/register_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edit_text_back2"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/register_password_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/lock"
                        android:layout_marginLeft="10dp"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:background="@android:color/white" />

                    <EditText
                        android:id="@+id/register_password_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColorHint="#d1d1d1"
                        android:textSize="40sp" />


                </LinearLayout>


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/register_confirmation_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edit_text_back2"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/register_confirmation_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/confirmation"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColorHint="#d1d1d1"
                        android:textSize="40sp" />


                </LinearLayout>


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/register_mobile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edit_text_back2"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/register_mobile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mobile"
                        android:layout_marginLeft="10dp"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:background="@android:color/white" />

                    <EditText
                        android:id="@+id/register_mobile_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/mobile"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textColorHint="#d1d1d1"
                        android:textSize="40dp" />


                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/register_level_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edit_text_back2"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/register_level_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/level2"
                        android:layout_marginLeft="10dp"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:background="@android:color/white" />

                    <TextView
                        android:id="@+id/register_level_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableRight="@drawable/level1"
                        android:gravity="center_vertical"
                        android:hint="@string/level"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColorHint="#d1d1d1"
                        android:textSize="40sp" />

                    <!--<Spinner-->
                    <!--android:id="@+id/register_level_edit_text"-->
                    <!--style="@style/spinnerItemStyle"-->
                    <!--android:layout_width="580dp"-->
                    <!--android:layout_height="59dp"-->
                    <!--android:layout_toRightOf="@+id/piotxt5"-->
                    <!--android:drawSelectorOnTop="true"-->
                    <!--android:dropDownVerticalOffset="100dp"-->
                    <!--android:entries="@array/levels"-->
                    <!--android:overlapAnchor="false"-->
                    <!--android:prompt="@string/level"-->
                    <!--android:spinnerMode="dropdown" />-->

                </LinearLayout>


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/register_camera_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edit_text_back2"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/register_camera_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/camera"
                        android:layout_marginLeft="10dp"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:background="@android:color/white" />

                    <EditText
                        android:id="@+id/register_camera_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/camrea"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColorHint="#d1d1d1"
                        android:textSize="40sp" />


                </LinearLayout>


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/register_model_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edit_text_back2"
                    android:gravity="center_vertical">


                    <EditText
                        android:id="@+id/register_model_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/model"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColorHint="#D1D1D1"
                        android:textSize="40sp" />


                </LinearLayout>


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/register_interest_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/edit_text_back2"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/register_model_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/heart"
                        android:layout_marginLeft="10dp"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:background="@android:color/white" />

                    <TextView
                        android:id="@+id/register_interest_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableRight="@drawable/level1"
                        android:gravity="center_vertical"
                        android:hint="@string/interseted"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColorHint="#D1D1D1"
                        android:textSize="40sp" />

                    <!--<Spinner-->
                    <!--android:id="@+id/register_interest_edit_text"-->
                    <!--style="@style/spinnerItemStyle"-->
                    <!--android:layout_width="580dp"-->
                    <!--android:layout_height="59dp"-->
                    <!--android:layout_toRightOf="@+id/piotxt5"-->
                    <!--android:drawSelectorOnTop="true"-->
                    <!--android:entries="@array/interests"-->
                    <!--android:overlapAnchor="false"-->
                    <!--android:prompt="@string/level"-->
                    <!--android:spinnerMode="dropdown" />-->


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/register_upload_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:background="@drawable/edit_text_back2"
                        android:gravity="center_vertical">


                        <ImageView
                            android:id="@+id/register_upload_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mail"
                            android:layout_marginLeft="10dp"/>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/white" />


                        <Button
                            android:id="@+id/register_upload_edit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/upload_photo"
                            android:maxLines="1"
                            android:textColorHint="#d1d1d1"
                            android:textSize="40sp"
                            android:textAllCaps="false"/>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/register_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/star" />

                    <TextView
                        android:id="@+id/register_no_file_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="@string/no_file_selected"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <Button
                    android:id="@+id/register_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:background="#3C3C3B"
                    android:text="@string/signUp"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textAllCaps="false"/>


            </LinearLayout>


        </ScrollView>


    </RelativeLayout>
</LinearLayout>